<div class="flex justify-between items-center py-4">
    <%= render "exercises/breadcrumbs" %>
    <%= render "exercises/buttons" %>
</div>

<table class="min-w-full leading-normal mb-5">
  <thead>
    <tr class="bg-primary">
      <th class="px-5 py-3 border-b-2 border-gray-20 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider rounded-tl-xl">
        <%= t('exercises.name') %>
      </th>
      <th class="px-5 py-3 border-b-2 border-gray-20 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
        <%= t('exercises.video_url') %>
      </th>
      <th class="px-5 py-3 border-b-2 border-gray-20 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
        <%= t('exercises.objective') %>
      </th>
      </th>
      <th class="px-5 py-3 border-b-2 border-gray-20 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider rounded-tr-xl">
        <%= t('exercises.actions') %>
      </th>
    </tr>
  </thead>
  <tbody>
     <%= render partial: 'exercise', collection: @exercises %>
  </tbody>
</table>

<div class="flex justify-between items-center">
  <%== pagy_nav(@pagy)  if @pagy.pages > 1 %>
  <%== pagy_info(@pagy) %>
</div>