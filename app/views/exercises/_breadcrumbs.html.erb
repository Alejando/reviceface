      <li class="flex items-center">
        <p class="text-secondary"><%= @exercise.name %> </p>
      </li>
    <% elsif @exercise.present? && @exercise.new_record? %>
      <li class="flex items-center">
        <p class="text-secondary"><%=t('breadcrumbs.new_exercise') %> </p>
      </li>
    <% end %>
  </ol>
</nav>