<nav class="text-gray-700" aria-label="Breadcrumb">
  <ol class="list-none p-0 inline-flex">
    <li class="flex items-center">
      <a href="/" class="text-gray-500 hover:text-accent"><%= t('breadcrumbs.home') %></a>
      <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.373-9.373-9.373-24.569 0-33.941L188.505 256 34.525 102.02c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0l194.343 194.343c9.373 9.374 9.373 24.569.001 33.942z"/></svg>
    </li>
    <li class="flex items-center">
      <% if current_page?(exercises_path) %>
        <p class="text-secondary"><%= t('breadcrumbs.exercises') %> </p>
      <% else %>
        <a href="/exercises" class="hover:text-accent" aria-current="page"><%= t('breadcrumbs.exercises') %></a>
      <% end %>
      <% if @exercise.present?  %>
        <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.373-9.373-9.373-24.569 0-33.941L188.505 256 34.525 102.02c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0l194.343 194.343c9.373 9.374 9.373 24.569.001 33.942z"/></svg>
