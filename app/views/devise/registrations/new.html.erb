<h2 class="text-xl font-bold text-center mb-6"><%= t('devise.registrations.new.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.label :email, t('devise.registrations.new.email'), class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, t('devise.registrations.new.password'), class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <% if @minimum_password_length %>
      <em class="text-sm">( <%= @minimum_password_length %> <%= t('devise.registrations.new.characters_minimum') %> )</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="field mb-6">
    <%= f.label :password_confirmation, t('devise.registrations.new.password_confirmation'), class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <%= render "devise/shared/links" %>

  <div class="actions flex justify-end">
    <%= f.submit t('devise.registrations.new.sign_up'), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer' %>
  </div>
<% end %>