<div id="table_with_pagination">
  <!-- Routines Table -->
  <table class="min-w-full leading-normal">
    <thead>
      <tr class="bg-primary">
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= sort_link(q, :name, t('routines.name')) %>
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= sort_link(q, :patient_user_first_name, t('routines.patient')) %>
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= sort_link(q, :start_at, t('routines.dates')) %>
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= sort_link(q, :status, t('routines.status')) %>
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= t('routines.accuracy_score') %>
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= t('routines.exercises') %>
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
          <%= t('routines.actions') %>
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% if routines.any? %>
        <%= render partial: 'routine', collection: routines %>
      <% else %>
        <tr>
          <td colspan="7" class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center text-neutral-dark">
            <%= t('routines.no_results') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Pagination -->
  <div class="p-4 border-t border-gray-200">
    <div class="flex justify-between items-center">
      <%== pagy_nav(pagy) if pagy.pages > 1 %>
      <div class="text-sm text-neutral-dark">
        <%== pagy_info(pagy) %>
      </div>
    </div>
  </div>
</div>
