<div class="min-h-screen bg-background">
  <!-- Header -->
  <header class="bg-white shadow-md rounded-lg">
    <div class=" mx-auto py-5 px-4">
      <div class="items-center">
        <%= render "routines/breadcrumbs" %>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class=" mx-auto py-5">
    <div class="bg-white shadow-md rounded-lg p-6 mb-8">
      <%= form_with(model: @routine, data: { turbo: false }) do |form| %>
        <%= render 'shared/resource_errors', resource: @routine %>

        <div class="mb-8">
          <%= render 'form', form: form %>
        </div>

        <div class="flex items-center justify-end">
          <%= form.submit t('routines.submit'), class: "inline-flex items-center px-4 py-2 border border-primary text-sm font-medium rounded-lg text-white bg-primary hover:bg-background hover:text-primary transition-colors duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </main>
</div>