<div class="flex max-w-full flex-wrap items-end gap-4 py-3">
    <%= form.label :name, class: 'flex flex-col min-w-40 flex-1' do %>
      <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
        <%= t('routines.name') %>
      </p>
      <%= form.text_field :name, class: 'form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 placeholder:text-slate-400 p-2 text-base font-normal leading-normal bg-white', placeholder: t('routines.placeholder_name') %>
    <% end %>
</div>

<div class="flex max-w-full flex-wrap items-end gap-4 py-3">
    <%= form.label :description, class: 'flex flex-col min-w-40 flex-1' do %>
      <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
        <%= t('routines.description') %>
      </p>
      <%= form.text_area :description, class: 'form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 placeholder:text-slate-400 p-2 text-base font-normal leading-normal bg-white' %>
    <% end %>
</div>

<div class="flex max-w-full flex-wrap items-end gap-4 py-3">
    <%= form.label :start_at, class: 'flex flex-col min-w-40 flex-1' do %>
      <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
        <%= t('routines.start_at') %>
      </p>
      <%= form.date_field :start_at, class: 'form-input  w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 placeholder:text-slate-400 p-2 text-base font-normal leading-normal bg-white' %>
    <% end %>
</div>

<div class="flex max-w-full flex-wrap items-end gap-4 py-3">
  <%= form.label :patient_id, class: 'flex flex-col min-w-40 flex-1' do %>
    <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
      <%= t('routines.patient') %>
    </p>
    <%= form.select :patient_id, @current_clinic.patients.confirmed.collect { |p| [p.full_name, p.id] },
      { prompt: t('routines.select_patient') },
      class: 'form-select flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 p-2 text-base font-normal leading-normal bg-white'
    %>
  <% end %>
</div>
