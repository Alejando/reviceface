<div class="max-w-sm overflow-hidden bg-white shadow-lg  rounded-xl relative" id="<%= dom_id(routine) %>">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"><%= routine.name %></div>
    <p class="text-gray-700 text-base truncate">
      <%= routine.description %>
    </p>
    <ul class="mt-4">
      <li><strong><%= t('routines.status')%></strong> <%= routine.status %></li>
    </ul>
  </div>
  <div class="px-6 py-4 ">
    <ul>
      <% routine.routine_exercises.each do |routine_exercise| %>
        <li><%= routine_exercise.exercise.name %></li>
      <% end %>
    </ul>
  </div>
  <%= button_to routine, method: :delete, data: {}, class: "absolute top-0 right-0 mt-2 mr-2 text-gray-300 hover:text-gray-800" do %>
    <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
    </svg>
  <% end %>
</div>