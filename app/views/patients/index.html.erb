<div class="min-h-screen bg-background">
  <!-- Header -->
  <header class="bg-white shadow-md rounded-lg">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-primary">Pacientes</h1>
        <%= render "patients/breadcrumbs" %>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-3 sm:px-6 lg:px-8">
    <!-- Actions Bar -->
    <div class="flex justify-end items-center">
      <%= render "patients/buttons" %>
    </div>

    <!-- Patients Table -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full leading-normal">
        <thead>
          <tr class="bg-primary">
            <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
              <%= t('patients.name') %>
            </th>
            <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
              <%= t('patients.age') %>
            </th>
            <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
              <%= t('patients.terms_and_conditions') %>
            </th>
            <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
              <%= t('patients.routines') %>
            </th>
            <th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold text-neutral-light uppercase tracking-wider">
              <%= t('patients.actions') %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <%= render partial: 'patient', collection: @patients %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="mt-8 bg-white shadow-md rounded-lg p-4">
      <div class="flex justify-between items-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        <div class="text-sm text-neutral-dark">
          <%== pagy_info(@pagy) %>
        </div>
      </div>
    </div>
  </main>
</div>