<div class="flex justify-between items-center py-4">
    <%= render "patients/breadcrumbs" %>
</div>

<div class="w-6/12">
  <%= form_with(model: @patient, data: { turbo: false }) do |form| %>
    <%= render 'shared/resource_errors', resource: @patient %>
    <div class="mb-8">
      <%= form.fields_for :user do |user_fields| %>
        <%= render 'form', user_fields: user_fields %>
      <% end %>
    </div>

    <div class="flex items-center justify-end ">
      <%= form.submit t('patients.submit'), class: "bg-secondary text-white font-bold py-2 px-4 rounded-xl focus:outline-none focus:shadow-outline cursor-pointer border border-secondary hover:bg-background hover:text-secondary" %>
    </div>
  <% end %>
</div>