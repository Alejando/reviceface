<div class="min-h-screen bg-background">
  <!-- Header -->
  <header class="bg-white shadow-md rounded-lg">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-primary">Editar Paciente</h1>
        <%= render "patients/breadcrumbs" %>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="bg-white shadow-md rounded-lg p-6 mb-8">
      <%= form_with(model: @patient, local: true, data: { turbo: false }) do |form| %>
        <%= render 'shared/resource_errors', resource: @patient %>
        
        <div>
          <%= form.fields_for :user do |user_fields| %>
            <%= render 'form', user_fields: user_fields %>
          <% end %>
        </div>

        <div class="flex items-center justify-end">
          <%= form.submit t('patients.update'), class: "bg-secondary text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline cursor-pointer border border-secondary hover:bg-background hover:text-secondary transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </main>
</div>