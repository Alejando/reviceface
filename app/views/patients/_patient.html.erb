<tr class="hover:bg-neutral-light transition-colors duration-150">
  <td class="px-5 py-4">
    <%= link_to patient.full_name, patient, class: "font-medium text-primary hover:text-secondary transition-colors duration-150" %>
  </td>
  <td class="px-5 py-4 text-neutral-dark">
    <%= patient.user.age %> a√±os
  </td>
  <td class="px-5 py-4 text-neutral-dark">
    <%= boolean_to_human(patient.accepted_terms_and_conditions?) %>
  </td>
  <td class="px-5 py-4">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary">
      <%= patient.routines.count %>
    </span>
  </td>
  <td class="px-5 py-4">
    <div class="flex items-center space-x-2">
      <%= link_to edit_patient_path(patient), class: "inline-flex items-center p-1.5 text-primary hover:bg-primary/10 rounded-lg transition-colors duration-150" do %>
        <%= icon "edit", class: "w-4 h-4" %>
      <% end %>
    </div>
  </td>
</tr>