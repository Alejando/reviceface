<tr class="border-t border-">
  <td class="p-5 bg-white rounded-bl-xl">
    <%= link_to patient.full_name, patient, class: "text-secondary" %>
  </td>
  <td class="p-5 bg-white">
    <%= patient.user.age %>
  </td>
  <td class="p-5 bg-white">
    <%= boolean_to_human(patient.accepted_terms_and_conditions?) %>
  </td>
  <td class="p-5 bg-white">
    <%= patient.routines.count %>
  </td>
  <td class="bg-white rounded-br-xl">
    <div class="flex items-center justify-start">
      <%= render "shared/edit_icon", path: edit_patient_path(patient), turbo_stream: false %>
    </div>
    <!-- <%= link_to t('buttons.delete'), patient, method: :delete, data: { confirm: 'Are you sure you want to delete this patient?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %> -->
  </td>
</tr>