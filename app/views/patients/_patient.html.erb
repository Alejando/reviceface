<tr class="border-t border-">
  <td class="px-5 py-5 bg-white rounded-bl-xl">
    <%= patient.user.full_name %>
  </td>
  <td class="px-5 py-5 bg-white">
    <%= patient.user.age %>
  </td>
  <td class="px-5 py-5 bg-white">
    <%= boolean_to_human(patient.accepted_terms_and_conditions?) %>
  </td>
  <td class="px-5 py-5 bg-white">
    <%= patient.routines.count %>
  </td>
  <td class="px-5 py-5 bg-white rounded-br-xl">
    <%= link_to t('buttons.edit'), edit_patient_path(patient), class: "bg-accent text-white font-bold py-2 px-4 rounded-xl border border-accent hover:bg-background hover:text-accent" %>
    <!-- <%= link_to t('buttons.delete'), patient, method: :delete, data: { confirm: 'Are you sure you want to delete this patient?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %> -->
  </td>
</tr>