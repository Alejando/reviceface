<!-- Tarjeta Principal del Paciente -->
<div class="bg-white shadow-md rounded-lg p-6 mb-4">
  <h2 class="text-xl font-bold mb-2">Información del Paciente</h2>
  <p><strong>Nombre:</strong> <%= @patient.full_name %></p>
  <p><strong>Edad:</strong> <%= @patient.user.age %></p>
  <p><strong>Consentimiento Términos:</strong> <%= @patient.agree_terms_at %></p>
  <p><strong>Consentimiento Privacidad:</strong> <%= @patient.agree_privacy_at %></p>
</div>

<!-- Listado de Rutinas -->
<div class="space-y-4">
  <% @patient.routines.each do |routine| %>
    <div class="bg-secondary shadow-md rounded-lg p-4">
      <h3 class="text-lg font-semibold"><%= routine.name %></h3>
      <p><%= routine.description %></p>
      <p><strong>Comienza:</strong> <%= routine.start_at %></p>
      <p><strong>Termina:</strong> <%= routine.end_at %></p>
      <p><strong>Estado:</strong> <%= routine.status %></p>
      <p><strong>Precisión:</strong> <%= routine.accuracy_score %>%</p>

      <!-- Ejercicios de la Rutina -->
      <div class="mt-3">
        <h4 class="text-md font-bold">Ejercicios</h4>
        <ul class="list-disc pl-5">
          <% routine.routine_exercises.each do |exercise| %>
            <li>
              <%= exercise.exercise.name %> - Series: <%= exercise.series %>, Repeticiones: <%= exercise.repetitions %>
              <br>
              Precisión: <%= exercise.accuracy_score %>%, Dificultad: <%= exercise.difficulty %>, Descanso: <%= exercise.rest_time %> segundos
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>