
  <div class="flex w-full flex-wrap items-end py-3">
    <%= form.label :exercise_id, class: 'flex flex-col min-w-40 flex-1' do %>
      <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
        <%= t('routines.exercise') %>
      </p>
      <%= form.select :exercise_id, Exercise.all.collect { |e| [e.name, e.id] },
        { prompt: t('routines.select_exercise') },
        class: 'form-select flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 p-2 text-base font-normal leading-normal bg-white'
      %>
    <% end %>
  </div>

  <div class="grid gap-4 grid-cols-3 py-3">
    <div class="flex flex-wrap items-end py-3 ">
      <%= form.label :repetitions, class: 'flex flex-col min-w-40 flex-1' do %>
        <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
          <%= t('routines.repetitions') %>
        </p>
        <%= form.number_field :repetitions, class: 'form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 placeholder:text-slate-400 p-2 text-base font-normal leading-normal bg-white' %>
      <% end %>
    </div>

    <div class="flex flex-wrap items-end py-3 ">
      <%= form.label :series, class: 'flex flex-col min-w-40 flex-1' do %>
        <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
          <%= t('routines.series') %>
        </p>
        <%= form.number_field :series, class: 'form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 placeholder:text-slate-400 p-2 text-base font-normal leading-normal bg-white' %>
      <% end %>
    </div>

    <div class="flex flex-wrap items-end py-3 ">
      <%= form.label :rest_time, class: 'flex flex-col min-w-40 flex-1' do %>
        <p class="text-neutral-dark text-base font-medium leading-normal pb-2">
          <%= t('routines.rest_time') %>
        </p>
        <%= form.number_field :rest_time, class: 'form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-neutral-dark focus:outline-0 focus:ring-0 border border-primary bg-slate-50 focus:border-primary h-14 placeholder:text-slate-400 p-2 text-base font-normal leading-normal bg-white' %>
      <% end %>
    </div>
  </div>