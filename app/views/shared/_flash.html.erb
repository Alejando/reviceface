<% flash.each do |type, message| %>
  <% flash_type = case type.to_sym
                  when :notice, :info then :confirm
                  when :success then :success
                  when :error then :danger
                  when :alert then :warning
                  else :confirm
                  end %>
  <%= render(NotificationComponent.new(
    type: flash_type,
    message: message,
    dismissible: true,
    timeout: 5000
  )) %>
<% end %>